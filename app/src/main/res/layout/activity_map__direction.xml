<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map_Direction">

    <RelativeLayout
        android:id="@+id/relley_1"
        android:background="#4083A9"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:id="@+id/text_view1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/white_border">

            <TextView
                android:id="@+id/txt_start1"
                android:text="@string/st"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:id="@+id/im_loc1"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/txt_start1"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:hint="@string/veruda_ulica_pula"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/im_loc1"
                android:id="@+id/location_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/text_view1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_border">

            <TextView
                android:id="@+id/end_txt"
                android:text="@string/en"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:id="@+id/im_location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/end_txt"
                android:src="@drawable/ic_baseline_location_on_24">

            </ImageView>
            <TextView
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:hint="@string/rovinjska_14_pula"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/im_location_2"
                android:id="@+id/location_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>
    <fragment
        android:layout_below="@id/relley_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_mapDir"
        android:name="com.google.android.gms.maps.SupportMapFragment" >

    </fragment>

</RelativeLayout>