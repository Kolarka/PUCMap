<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#4083A9"
        android:id="@+id/relLayout11">

        <ImageButton
            android:id="@+id/Im_parking"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="#4083A9"
            android:src="@drawable/ic_next"
            tools:ignore="ContentDescription">


        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/Im_parking"
            android:text="@string/parking"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_v1"
            >

        </TextView>


    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:id="@+id/map_parking"
        android:name="com.google.android.gms.maps.SupportMapFragment" >

    </fragment>

    <Button
        android:id="@+id/first_zone"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/red_border"
        android:gravity="center"
        android:text="@string/_1_zone"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:rippleColor="#F44336">

    </Button>

    <Button
        android:id="@+id/second_zone"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/first_zone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yellow_border"
        android:gravity="center"
        android:text="@string/_2_zone"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:rippleColor="#4CAF50">

    </Button>

    <Button
        android:id="@+id/third_zone"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/second_zone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_border"
        android:gravity="center"
        android:text="@string/_3_zone"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/SMS_parking"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/third_zone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border"
        android:gravity="center"
        android:text="@string/sms_parking"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/slots_btn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/SMS_parking"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_border"
        android:gravity="center"
        android:text="@string/slots"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold">

    </Button>


</RelativeLayout>