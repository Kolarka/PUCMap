<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Get_Me_Somewhere">
    <RelativeLayout
        android:id="@+id/statr_relLay"
        android:background="#4083A9"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/text_start"
            android:text="@string/end"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <com.mancj.materialsearchbar.MaterialSearchBar
            style="@style/MaterialSearchBarLight"
            android:layout_below="@id/text_start"
            app:mt_speechMode="false"
            app:mt_hint="Search place to go"
            app:mt_maxSuggestionsCount="10"
            app:mt_navIconEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="5dp"
            android:outlineProvider="bounds"
            app:mt_placeholder="Where are you going?"
            android:id="@+id/searchBar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/curr_location"
        android:layout_below="@id/statr_relLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_cur_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_baseline_my_location_24"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:layout_toEndOf="@id/img_cur_location"
            android:text="@string/use_current_location"
            android:textColor="#319BAC"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@id/curr_location"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey"/>

    <RelativeLayout
        android:id="@+id/wor_relLay"
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_work"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_work"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:layout_toEndOf="@id/img_work"
            android:text="@string/work"
            android:textColor="#575757"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@id/wor_relLay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey"/>

    <RelativeLayout
        android:id="@+id/home_relLay"
        android:layout_below="@id/wor_relLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_home_two"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:layout_toEndOf="@id/img_home"
            android:text="@string/home"
            android:textColor="#575757"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>



</RelativeLayout>