<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4083A9"
    tools:context=".Pu_Brij">
    <RelativeLayout
        android:id="@+id/pu_brij"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/pula_brijunii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/pu_brij"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/white_border"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="500dp">

            <TextView
                android:text="@string/korkyra"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/kork_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="120dp"
                android:layout_marginBottom="10dp">

            </TextView>

            <View
                android:layout_marginStart="10dp"
                android:id="@+id/line1"
                android:layout_below="@id/kork_txt"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/pol2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/polazak"
                android:textColor="@color/black"
                android:layout_below="@id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/vri1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginStart="200dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/pol2"
                android:text="12:00">

            </TextView>
            <TextView
                android:id="@+id/dol1"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/dolaz"
                android:textColor="@color/black"
                android:layout_below="@id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/vri2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginStart="200dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/pol2"
                android:text="16:40">

            </TextView>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/line2"
                android:layout_below="@id/dol1"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@color/black"/>


            <TextView
                android:id="@+id/pol3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/polazak"
                android:textColor="@color/black"
                android:layout_below="@id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/vri4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginStart="200dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/pol2"
                android:text="17:00">

            </TextView>
            <TextView
                android:id="@+id/dol2"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/dolaz"
                android:textColor="@color/black"
                android:layout_below="@id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/vri3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginStart="200dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/pol2"
                android:layout_marginBottom="20dp"
                android:text="20:00">

            </TextView>






        </RelativeLayout>

    </ScrollView>

</RelativeLayout>